<%= button_to bakery_toggle_favorite_path(bakery), 
    method: :post,
    data: { turbo_stream: true },
    id: "favorite_button_#{bakery.id}",
    class: "bg-white/90 hover:bg-white rounded-full p-2 transition-colors",
    form_class: "inline" do %>
  <svg class="w-6 h-6 <%= favorited ? 'text-red-500 fill-current' : 'text-gray-700' %>" 
       fill="<%= favorited ? 'currentColor' : 'none' %>" 
       stroke="currentColor" 
       viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
    </path>
  </svg>
<% end %>
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-amber-500 to-orange-600 px-8 py-6">
        <h1 class="text-2xl font-bold text-white">노트 수정</h1>
        <p class="text-amber-50 mt-1"><%= @bakery.name %>의 방문 기록</p>
      </div>

      <div class="p-8">
        <%= form_with model: [@bakery, @note], local: true, html: { multipart: true } do |form| %>
          <% if @note.errors.any? %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
              <ul class="list-disc list-inside text-sm">
                <% @note.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="space-y-6">
            <!-- 방문 날짜 -->
            <%= render 'shared/date_picker',
                form: form,
                field: :visit_date,
                label: "방문 날짜",
                value: @note.visit_date,
                max_date: Date.today,
                required: true %>

            <!-- 내용 -->
            <div>
              <%= form.label :content, "방문 기록", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_area :content,
                  rows: 8,
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition duration-200",
                  placeholder: "오늘의 방문은 어떠셨나요? 맛있었던 메뉴, 분위기, 특별했던 순간을 기록해보세요..." %>
            </div>

            <!-- 기존 이미지 -->
            <% if @note.images.attached? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">기존 사진</label>
                <div class="grid grid-cols-3 gap-2">
                  <% @note.images.each do |image| %>
                    <div class="relative">
                      <%= image_tag image, class: "w-full h-32 object-cover rounded-lg" %>
                    </div>
                  <% end %>
                </div>
                <p class="mt-2 text-xs text-gray-500">새로운 사진을 추가하면 기존 사진이 대체됩니다</p>
              </div>
            <% end %>

            <!-- 새 이미지 업로드 -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">새 사진 추가</label>
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-gray-400 transition-colors">
                <div id="image-preview-container" class="hidden mb-4">
                  <div id="image-previews" class="grid grid-cols-3 gap-2 mb-4"></div>
                </div>
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                <label for="note-images" class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
                  사진 선택
                </label>
                <input type="file" name="note[cloudflare_images][]"
                    multiple
                    id="note-images"
                    class="hidden"
                    accept="image/png,image/jpeg,image/jpg,image/gif">
                <p class="mt-2 text-xs text-gray-500">여러 장의 사진을 선택할 수 있습니다 (JPG, PNG, GIF)</p>
              </div>
            </div>

            <!-- 버튼 -->
            <div class="flex items-center justify-between pt-6">
              <%= link_to "취소", bakery_note_path(@bakery, @note),
                  class: "px-6 py-3 text-gray-700 bg-gray-200 rounded-lg font-medium hover:bg-gray-300 transition duration-200" %>
              <%= form.submit "수정하기",
                  class: "px-6 py-3 bg-gradient-to-r from-amber-500 to-orange-600 text-white rounded-lg font-medium hover:from-amber-600 hover:to-orange-700 transition duration-200 cursor-pointer" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const imageInput = document.getElementById('note-images');
  const previewContainer = document.getElementById('image-preview-container');
  const previewsDiv = document.getElementById('image-previews');

  if (imageInput) {
    imageInput.addEventListener('change', function(e) {
      const files = Array.from(e.target.files);

      if (files.length > 0) {
        previewContainer.classList.remove('hidden');
        previewsDiv.innerHTML = '';

        files.forEach((file, index) => {
          if (file.type.match('image.*')) {
            const reader = new FileReader();
            reader.onload = function(e) {
              const div = document.createElement('div');
              div.className = 'relative';
              div.innerHTML = `
                <img src="${e.target.result}" class="w-full h-32 object-cover rounded-lg">
                <div class="absolute top-1 right-1 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                  ${index + 1}
                </div>
              `;
              previewsDiv.appendChild(div);
            };
            reader.readAsDataURL(file);
          }
        });
      } else {
        previewContainer.classList.add('hidden');
      }
    });
  }
});
</script>